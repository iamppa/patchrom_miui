<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
	    android:id="@+id/lt_bottombar"
	    style="@miui:style/V5.Widget.BottomBar"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/detail_bottombar_height"
	    android:paddingTop="@dimen/media_bottom_bar_padding_vertical"
	    android:paddingBottom="@dimen/media_bottom_bar_padding_vertical"
	    android:layout_gravity="bottom"  
	    android:orientation="horizontal"
	    android:background="@drawable/detail_bottombar">
		
	    <FrameLayout 
	        android:layout_width="@dimen/detail_bottom_button_width_edge"
	        android:layout_height="match_parent">
	        <Button
	            android:id="@+id/btn_myfavorite"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:background="@drawable/btn_detail_left_select_source" />
	    </FrameLayout>
	    
	    <FrameLayout 
	        android:layout_width="@dimen/detail_bottom_button_width_center"
	        android:layout_height="match_parent">
	        <Button
	            android:id="@+id/btn_play"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:background="@drawable/btn_detail_center_select_source" />
	    </FrameLayout>
	    
	    <FrameLayout 
	        android:layout_width="@dimen/detail_bottom_button_width_edge"
	        android:layout_height="match_parent">
	        <Button
	            android:id="@+id/btn_select_source"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:background="@drawable/select_source_item_default" />
	    </FrameLayout>
	</LinearLayout>

</FrameLayout>


