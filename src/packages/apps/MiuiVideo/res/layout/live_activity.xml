<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewpager_bg_height"
        android:layout_marginTop="@dimen/viewpager_bg_margin_top"
        android:background="@drawable/channel_bottom_bg">   
    </View>
   
	<com.duokan.tv.video.widget.ShadowFrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"> 	      
	    
	   	<com.duokan.tv.video.widget.PagerView
		   android:id="@+id/live_pager_view"
		   android:layout_width="match_parent"
		   android:layout_height="match_parent"/> 
	    <com.duokan.tv.video.widget.ShadowView
	      android:layout_width="match_parent"
	      android:layout_height="@dimen/shadow_mask_height"
	      android:layout_gravity="top"
	      android:layout_marginTop="@dimen/shadow_mask_magrin_top"
	      android:background="@drawable/shadow_mask">   
		 </com.duokan.tv.video.widget.ShadowView>
	</com.duokan.tv.video.widget.ShadowFrameLayout>
