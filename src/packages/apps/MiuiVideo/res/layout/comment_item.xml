<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duokan="http://schemas.android.com/apk/res/com.miui.video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/comment_padding_horizontal"
    	android:paddingRight="@dimen/comment_padding_horizontal"
    	android:paddingTop="@dimen/comment_padding_top"
    	android:paddingBottom="@dimen/comment_padding_bottom"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/comment_title_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/p_80_white"
                android:textSize="@dimen/text_size_34"/>

            <com.duokan.tv.video.widget.RatingView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                duokan:ratingStarType="small" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:textColor="@color/p_50_white"
            android:textSize="@dimen/text_size_26"/>
    </LinearLayout>
    
    <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/divider_height"
    android:background="@color/list_divider" />

</LinearLayout>