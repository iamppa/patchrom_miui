<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/page_margin"
    android:paddingRight="@dimen/page_margin"
    android:paddingBottom="@dimen/subject_special_vspace" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/special_height" >

        <com.duokan.tv.video.widget.MediaImageView
            android:id="@+id/poster_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/poster_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/page_margin"
            android:paddingRight="@dimen/page_margin" >

            <TextView
                android:id="@+id/subject_media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/special_title_margin_top"
                android:shadowColor="@color/p_30_black"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/p_80_white" />

            <TextView
                android:id="@+id/subject_media_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/p_40_black"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="7"
                android:textSize="@dimen/text_size_26" 
                android:textColor="@color/p_60_white"/>
        </LinearLayout>

 
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/banner_border" />
            
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/special_height"
        android:background="@drawable/clickable_item_bg_corner" />

</FrameLayout>