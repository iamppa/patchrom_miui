<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
 
     <com.duokan.tv.video.widget.LoadingListView
         android:id="@+id/lv_myfavorite"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     </com.duokan.tv.video.widget.LoadingListView>

     <LinearLayout
         android:id="@+id/lt_myfavoritetip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/tv_nomyfavoritetip"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginBottom="@dimen/nomyfavorite_tip_margin_bottom"
             android:text="@string/no_myfavorite"
             android:textColor="@color/no_myfavoritetip"
             android:textSize="@dimen/text_normal_size" />

         <TextView
             android:id="@+id/tv_nomyfavoriteadvice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="@dimen/nomyfavorite_advice_margin_top"
             android:text="@string/no_myfavorite_advice"
             android:textSize="@dimen/text_normal_bigger_size" />
     </LinearLayout>
         
</merge>