<?xml version="1.0" encoding="utf-8"?>
<com.duokan.tv.video.widget.SearchHintItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_hint_item_height"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/search_hint_item_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_hint_item_edge_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_history_symbol"
            android:contentDescription="@string/app_name"/>
        <TextView 
            android:id="@+id/search_hint_item_tv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textIsSelectable="false"
            android:layout_marginLeft="@dimen/search_hint_item_tv_left_margin"
            android:textSize="@dimen/text_size_34"
            android:textColor="@color/p_80_black"
            android:textStyle="bold"/>
        <ImageButton 
            android:id="@+id/search_hint_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/search_hint_item_edge_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search_history_delete"
            android:background="@drawable/transparent"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
    	android:layout_height="@dimen/divider_height"
    	android:background="@color/list_divider"/>
</com.duokan.tv.video.widget.SearchHintItem>