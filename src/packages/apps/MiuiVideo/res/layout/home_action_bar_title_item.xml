<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_container"
    android:layout_width="@dimen/home_titlebar_width"
    android:layout_height="@dimen/home_titlebar_height">
    
        <TextView
        android:id="@miui:id/v5_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/home_title_margin_horizontal_left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_38"
        android:textStyle="bold" 
        android:shadowDx="@integer/home_title_shadow_dx"
        android:shadowDy="@integer/home_title_shadow_dy"
        android:shadowRadius="@integer/home_title_shadow_radius"
        android:shadowColor="@color/p_27_black"/>
    
</RelativeLayout>