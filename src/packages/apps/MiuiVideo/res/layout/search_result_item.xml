<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
         xmlns:duokan="http://schemas.android.com/apk/res/com.miui.video"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/search_result_margin"
         android:gravity="center_vertical"
         android:orientation="horizontal">

            <com.duokan.tv.video.widget.MediaView
                android:id="@+id/media_view"
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height"
                android:layout_gravity="center_vertical"
                duokan:showMask="false"
                duokan:showText="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/search_result_margin"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/media_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_result_name_margin_bottom"
                    android:shadowColor="@color/p_30_black"
                    android:shadowDx="@integer/search_result_shadow_dx"
                    android:shadowDy="@integer/search_result_shadow_dy"
                    android:shadowRadius="@integer/search_result_shadow_radius"
                    android:singleLine="true"
                    android:textColor="@color/p_80_white"
                    android:textSize="@dimen/text_size_30"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/actors_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_result_desc_margin_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/actors_colon"
                        android:shadowColor="@color/p_30_black"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/actors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_result_desc_margin_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_colon"
                        android:shadowColor="@color/p_30_black"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tags_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_result_desc_margin_bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tags_colon"
                        android:shadowColor="@color/p_30_black"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_result_desc_margin_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_colon"
                        android:shadowColor="@color/p_30_black"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                    	android:shadowDx="@integer/search_result_shadow_dx"
                    	android:shadowDy="@integer/search_result_shadow_dy"
                    	android:shadowRadius="@integer/search_result_shadow_radius"
                        android:textColor="@color/p_80_white"
                        android:textSize="@dimen/text_size_26"/>
                </LinearLayout>

<!--            <TextView
                    android:id="@+id/media_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/p_80_white" /> -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_result_ratingstar_margin_top"
                    android:layout_marginLeft="@dimen/search_result_ratingstar_margin_left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.duokan.tv.video.widget.RatingView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff7e00" 
                        android:visibility="invisible"/>
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/list_divider" />

</LinearLayout>