<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/live_popup_top_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/live_top_back_img"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				android:src="@drawable/vp_back_v5_imageview" /> 
			<TextView
				android:id="@+id/live_top_tv_show"
				style="@style/vp_top_status_bar_media_name_textview_style_v5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/player_popuptop_marginTop"
				android:layout_toRightOf="@id/live_top_back_img"
				android:singleLine="true" />
			<TextView
				android:id="@+id/live_top_tv_television"
				style="@style/vp_top_status_bar_sub_title_textview_style_v5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/live_top_tv_show"
				android:layout_marginTop="@dimen/top_status_bar_sub_title_textview_margin_top_v5"
				android:layout_toRightOf="@id/live_top_back_img" /> 
				
		   <ImageView
				android:id="@+id/live_top_iv_symbol"
				android:src="@drawable/dopool"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/popup_top_symbol_margin_right"/>
		</RelativeLayout>
</LinearLayout>