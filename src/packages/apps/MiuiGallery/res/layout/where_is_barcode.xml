<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/share_guide_album_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/click_top_right"
        android:layout_marginTop="@dimen/share_guide_album_bg_margin_top"
        android:src="@drawable/share_guide_album_bg" />

    <TextView
        android:id="@+id/click_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignRight="@id/share_guide_album_bg"
        android:layout_marginRight="@dimen/click_top_right_margin_right"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="@string/click_top_right"
        android:background="@drawable/click_top_right_popup" />

</RelativeLayout>